<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_inner_dark_gray"
        android:orientation="vertical"
        android:padding="8dp"
        android:id="@+id/layout_transaction_date"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:id="@+id/tv_transaction_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dec"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:id="@+id/tv_transaction_month"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="70"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Axis Ultra Short Term"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/tv_transaction_short_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Switch In"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:id="@+id/tv_transaction_type"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="29"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 7000"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:id="@+id/tv_transaction_amount"/>


    </LinearLayout>

</LinearLayout>