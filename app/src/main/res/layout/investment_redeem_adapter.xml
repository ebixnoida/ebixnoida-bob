<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|start">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@drawable/rounded_inner_orange"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSchemeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kotak Balanced Advantage"
                android:textSize="@dimen/_13ssp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/dark_black"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,000"
                android:gravity="center"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/dark_black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal"
            android:gravity="center|start">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="invisible"
                android:background="@drawable/rounded_inner_orange"/>
            <TextView
                android:id="@+id/txtDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_icon_user"
                android:textSize="20dp"
                android:gravity="end"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Fund Value"
                    android:textSize="@dimen/_13ssp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:gravity="center"
                    android:textColor="#5E5E5E"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCurrentFundValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="199,99.90"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_black"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Units"
                    android:textSize="@dimen/_13ssp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textColor="#5E5E5E"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCurrentunits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6,296.90"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/dark_black"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Basis"
                    android:textSize="@dimen/_13ssp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:gravity="center"
                    android:textColor="#5E5E5E"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtOrderBasis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Partial Amount"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_black"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount to Switch"
                    android:textSize="@dimen/_13ssp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textColor="#5E5E5E"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSwitchAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2,000"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/dark_black"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/light_gray"
            android:layout_marginTop="@dimen/_15sdp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>