<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.DashboardFragment">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="My Orders"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/rounded_inner_orange"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/txtInvestmentCart"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="Investment Cart"
                    android:textSize="16sp"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txtInvestmentCount"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:background="@drawable/orange_circle"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txtFilter"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Filter"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@color/colorGray"/>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linearSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_inner_white_ourte_gray"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/search"
                    android:tint="@color/light_gray" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="5dp"
                    android:textSize="@dimen/_13ssp"
                    android:layout_weight="1"
                    android:hint="Search Order"
                    android:textColor="@color/colorGray"
                    android:id="@+id/etSearch"/>
                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/close"
                    android:tint="@color/light_gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray_half"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/buyText"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:id="@+id/buyView"
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/color_light_orange"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sipText"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="SIP"
                        android:textSize="16sp"
                        android:textColor="@color/colorGray"/>

                    <LinearLayout
                        android:id="@+id/sipView"
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/switchText"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Switch"
                        android:textSize="16sp"
                        android:textColor="@color/colorGray"/>

                    <LinearLayout
                        android:id="@+id/switchView"
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Filter"
                        android:visibility="invisible"
                        android:textSize="16sp"
                        android:textColor="@color/colorGray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                </LinearLayout>



            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"/>

        </LinearLayout>



</LinearLayout>