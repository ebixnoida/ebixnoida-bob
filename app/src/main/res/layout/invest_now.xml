<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/color_light_orange"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/homelinear_buttom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_invest_now_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textColor="@drawable/home_selector"
            android:textSize="@dimen/_20sdp"
            android:text="@string/fa_icon_plus"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txthome_buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invest Now"
            android:textColor="@drawable/home_selector"
            android:textSize="9sp" />

    </LinearLayout>

</LinearLayout>
